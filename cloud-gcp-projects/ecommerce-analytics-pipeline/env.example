# Environment Variables for E-commerce Analytics Pipeline
# Copy this file to .env and fill in your actual values

# Google Cloud Platform Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a
GOOGLE_APPLICATION_CREDENTIALS=config/credentials/service-account.json

# BigQuery Configuration
BQ_DATASET_ID=ecommerce_analytics
BQ_LOCATION=US
BQ_DEFAULT_TABLE_EXPIRATION_MS=2592000000

# Cloud Storage Configuration
STORAGE_BUCKET_NAME=ecommerce-analytics-raw-data
STORAGE_PROCESSED_BUCKET=ecommerce-analytics-processed
STORAGE_CURATED_BUCKET=ecommerce-analytics-curated

# API Configuration
WEB_ANALYTICS_API_KEY=your-api-key-here
WEB_ANALYTICS_API_ENDPOINT=https://api.example.com/analytics
API_TIMEOUT_SECONDS=30
API_RETRY_ATTEMPTS=3
API_RATE_LIMIT_PER_MINUTE=100

# Data Quality Configuration
DATA_QUALITY_THRESHOLD=0.95
ENABLE_AUTO_CORRECTION=true
LOG_QUALITY_ISSUES=true

# Pipeline Configuration
PIPELINE_LOG_LEVEL=INFO
ENABLE_MONITORING=true
ENABLE_ALERTING=true
MAX_RETRIES=3
TIMEOUT_MINUTES=60

# Monitoring and Alerting
CLOUD_MONITORING_ENABLED=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_RECIPIENTS=data-team@company.com,oncall@company.com

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MINUTES=15
HEALTH_CHECK_TIMEOUT_SECONDS=30

# Security Configuration
ENABLE_ENCRYPTION=true
SERVICE_ACCOUNT_ROTATION_DAYS=90
AUDIT_LOGGING_ENABLED=true

# Testing Configuration
UNIT_TEST_COVERAGE_THRESHOLD=0.80
INTEGRATION_TEST_DATA_SIZE=small
DATA_QUALITY_TEST_SAMPLE_SIZE=1000
PERFORMANCE_TEST_TIMEOUT_SECONDS=300

# Development/Staging Specific
ENVIRONMENT=dev
CONFIG_PATH=config/environments/dev.yaml

# Optional: Override specific settings
# CUSTOMER_SEGMENT_HIGH_VALUE_THRESHOLD=1000
# PRODUCT_CATEGORY_ELECTRONICS=laptop,phone,tablet,accessories
# AGGREGATION_TIME_PERIODS=daily,weekly,monthly,quarterly,yearly
